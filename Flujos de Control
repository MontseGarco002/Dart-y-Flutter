// Flujos de control
void main(){

  var age = 15;

  //if - else
  if(age > 18){
    //permitimos algo
  } else if (age < 65 ){
    //hacemos otra cosa
  } else {
    //una ultima cosa
  }

  //for
  for (var i=0; i< 10; i++){
    //print(i);
  }

  //imprime cada integrante de la lista en un renglon
    List<int> ids =[1,34,555];
    for (var id in ids){
      //print(id);
    }

  //while
  var counter = 10;
  while(counter>0){
    //print(counter);
    counter --;
  }

  //do while
  //este codigo en especifico se usa cuando es necesario que se ejecute algun proceso aun que sea una vez
  var name = 'Montse';
  do {
    print(name);
  } while(name!= 'Montse');

  var retries = 5;
  while(true){
    print("quedan $retries intentos");
    if(retries == 0){
      print("No se pudo conectar, saliendo");
      break;
    }
    retries --;
  }

  //Para saltyarse una iteraci√≥n en un loop
  //"continue"
  List<int> scores =[100,0,8,560];
  for (var score in scores){
    if(score == 0){
      continue;
    }
    print("el puntaje es $score");
  }

  var status = getStatus();
}

  //switch-case
  bool getStatus() {
    var status = "ON";
    switch (status) {
      case "ON":
        break;
      case "OFF":
        return false;
      case "ERROR":
        throw Exception("Ocurrio Error X");
      case "WAITING":
      case "LOADING":
      //estos dos tienen la misma salida, esperan
        break;
      default:
        throw Exception("Status desconocido");
    }
    return true;
  }
